# Ekuatia System Configuration
# Copy this file to .env and fill in your actual credentials

# Ekuatia API Configuration
EKUATIA_BASE_URL=https://ekuatia.set.gov.py/ekuatiai/

# Authentication Credentials
# RUC without verification digit (format: 1234567, NOT 1234567-1)
RUC=your_ruc_without_dv

# Marangatu Confidential Access Key from tax management system
MARANGATU_ACCESS_KEY=your_confidential_access_key

# System Configuration
EMISSION_MODE=SOLUCIÃ“N GRATUITA

# Development Settings
NODE_ENV=development
LOG_LEVEL=debug

# Cache Configuration
# Configuration cache TTL in milliseconds (90 days default)
CONFIG_CACHE_TTL=7776000000

# Session Configuration
# Session token expiration in milliseconds
SESSION_EXPIRY=3600000

# API Configuration
# Request timeout in milliseconds
API_TIMEOUT=30000

# Retry Configuration
# Maximum retry attempts for failed API calls
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000

# Security Configuration
# Enable additional security logging
SECURITY_LOGGING=true

# Testing Configuration
# Use mock API responses for testing
USE_MOCK_API=true

# TypeScript Compilation
# Generate source maps for debugging
SOURCE_MAP=true